<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PhoneGuard"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="无障碍服务 + 本地 HTTP 接口"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Status Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="服务状态"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/tv_accessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❌ 无障碍服务未开启"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_screen_capture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❌ 截图权限未授予"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_http_server"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❌ HTTP 服务未运行"
                android:textSize="15sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Token: ..."
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_model_config"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="模型: 未配置"
                android:textSize="13sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Actions Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="权限设置"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/btn_accessibility"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="开启无障碍服务"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_battery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="豁免电池优化"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_auto_start"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="允许自启动"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_copy_token"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="复制 Token"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_settings"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="模型配置"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Info -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明：\n1. 点击「开启无障碍服务」，找到 PhoneGuard 并开启\n2. 点击「豁免电池优化」防止被系统杀掉\n3. 点击「允许自启动」确保开机自动运行\n\n开启无障碍后，截图功能自动可用（无需额外授权）。\n服务就绪后，Termux 可通过 127.0.0.1:8552 调用接口。"
            android:textSize="13sp"
            android:textColor="#888888"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
